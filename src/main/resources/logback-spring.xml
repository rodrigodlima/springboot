<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">

	<springProperty scope="context" name="profile" source="spring.profiles.active" />

	<property name="CONSOLE_LOG_PATTERN"
			  value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

	<include resource="org/springframework/boot/logging/logback/base.xml" />

	<logger name="javax.activation" level="WARN" />
	<logger name="javax.mail" level="WARN" />
	<logger name="javax.xml.bind" level="WARN" />
	<logger name="ch.qos.logback" level="WARN" />
	<logger name="com.codahale.metrics" level="WARN" />
	<logger name="com.ryantenney" level="WARN" />
	<logger name="com.sun" level="WARN" />
	<logger name="com.zaxxer" level="WARN" />
	<logger name="io.undertow" level="WARN" />
	<logger name="org.apache" level="WARN" />
	<logger name="org.apache.catalina.startup.DigesterFactory" level="OFF" />
	<logger name="org.bson" level="WARN" />
	<logger name="org.hibernate.validator" level="WARN" />
	<logger name="org.hibernate" level="INFO" />
	<logger name="org.hibernate.ejb.HibernatePersistence" level="OFF" />
	<logger name="org.springframework" level="INFO" />
	<logger name="org.thymeleaf" level="WARN" />
	<logger name="org.xnio" level="WARN" />
	<logger name="springfox" level="WARN" />
	<logger name="sun.rmi" level="WARN" />
	<logger name="liquibase" level="DEBUG" />
	<logger name="LiquibaseSchemaResolver" level="INFO" />
	<logger name="sun.rmi.transport" level="WARN" />
	<logger name="org.mongodb.driver.cluster" level="WARN" />
	<logger name="org.mongodb.driver.connection" level="WARN" />
	<logger name="org.mongodb.driver.protocol.command" level="WARN" />
	<logger name="com.objectpartners.plummer.graylog" level="DEBUG" />
	<logger name="org.springframework.boot.context.properties.ConfigurationPropertiesBindingPostProcessor" level="ERROR" />

	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
		<resetJUL>true</resetJUL>
	</contextListener>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>${logging.level.root}</level>
		</filter>
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
			<charset>utf8</charset>
		</encoder>
	</appender>
	
	<springProfile name="dev,hti,hk,prod">
		<appender name="GELF"
			class="biz.paluch.logging.gelf.logback.GelfLogbackAppender">
			<host>udp:${logging.gelf.host}</host>
			<port>${logging.gelf.port}</port>
			<version>1.1</version>
			<extractStackTrace>${logging.gelf.extractStackTrace}</extractStackTrace>
			<filterStackTrace>${logging.gelf.filterStackTrace}</filterStackTrace>
			<timestampPattern>${logging.gelf.timestampPattern}</timestampPattern>
			<additionalFields>project=plataforma-digital,microservice=be-charge,environment=${profile}</additionalFields>
			<additionalFieldTypes>project=String,microservice=String,environment=String</additionalFieldTypes>
			
			<mdcFields>${logging.gelf.fields}</mdcFields>
	       		
			<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
				<level>${logging.level.root}</level>
			</filter>
		</appender>
	</springProfile>
</configuration>
